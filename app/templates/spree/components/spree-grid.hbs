<div class="row">
  {{#each products as |product|}}
    {{#link-to 'spree.products.show' product}}
      <div class="small-12 medium-6 columns text-center">
        <img style="height:100px;border:none;" {{bind-attr src=product.images.firstObject.largeUrl}}>
        <h6 style="font-weight:bold;">{{product.name}}</h6>
        <h6>{{product.displayPrice}}</h6>
        {{!-- <hr> --}}
      </div>
    {{/link-to}}
  {{/each}}
</div>
