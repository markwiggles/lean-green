<div class="row">
  {{#each products as |product|}}
    {{#link-to 'spree.products.show' product}}
      <div class="small-12 medium-6 large-4 columns text-center">
        <img src={{product.images.firstObject.smallUrl}}>
        <h6 style="font-weight:bold;">{{product.name}}</h6>
        <h6>{{product.displayPrice}}</h6>
        <hr>
      </div>
    {{/link-to}}
  {{/each}}
</div>
