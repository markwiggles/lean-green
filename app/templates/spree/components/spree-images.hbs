<div class="row">
  <div class="small-12 columns">
    <div class="magnify">
      <div class="large" style="background: url({{selectedImage.largeUrl}}) no-repeat;"></div>
      <img {{bind-attr src=selectedImage.largeUrl}} class="small">
    </div>
  </div>
  <hr>
  <div class="small-12 columns">
    <div class="row">
      {{#each image in images}}
        <div class="small-3 columns left" {{action 'selectImage' image}}>
          <img {{bind-attr src=image.largeUrl}}>
        </div>
      {{/each}}
    </div>
  </div>
</div>
